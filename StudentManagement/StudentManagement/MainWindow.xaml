<Window x:Class="StudentManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        mc:Ignorable="d"
        Title="FPT University PRN212" Height="650" Width="900" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ======== TITLE ======== -->
        <TextBlock Text="PRN212 STUDENT MANAGEMENT SYSTEM"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#2c3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="380" />
                <ColumnDefinition Width="2*" MinWidth="400" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"  
                            HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnAdd" Content="Add" Margin="5" Padding="15,5" FontWeight="Bold" />
                    <Button x:Name="btnUpdate" Content="Update" Margin="5" Padding="15,5" />
                    <Button x:Name="btnDelete" Content="Delete" Margin="5" Padding="15,5" />
                </StackPanel>

                <GroupBox Header="Student info" Padding="10" FontWeight="Bold">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
                            <TextBox Name="txtId" Grid.Row="0" Grid.Column="1" Margin="5" />

                            <Label Content="Full Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
                            <TextBox Name="txtName" Grid.Row="1" Grid.Column="1" Margin="5" />

                            <Label Content="Gender:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                                <RadioButton x:Name="radMale" Content="Male" Margin="0,0,15,0" GroupName="Gender" />
                                <RadioButton x:Name="radFemale" Content="Female" GroupName="Gender" />
                            </StackPanel>

                            <Label Content="Date of Birth:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
                            <DatePicker x:Name="dpkDOB" Grid.Row="3" Grid.Column="1" Margin="5" />

                            <Label Content="Major:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
                            <ComboBox x:Name="cboMajorName" Grid.Row="4" Grid.Column="1" Margin="5" />

                            <Label Content="Address:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" Margin="0,8,0,0" />
                            <TextBox x:Name="txtAddress" Grid.Row="5" Grid.Column="1" Margin="5" 
                                     MinHeight="60" TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" />

                            <Label Content="Skills:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,8,0,0" />
                            <StackPanel Grid.Row="6" Grid.Column="1" Margin="5,8,5,5">
                                <CheckBox x:Name="chkPython" Content="Python" />
                                <CheckBox x:Name="chkJava" Content="Java" Margin="0,5,0,0" />
                                <CheckBox x:Name="chkDotNet" Content=".dotNet" Margin="0,5,0,0" />
                            </StackPanel>

                            <Label Content="Department:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Margin="0,8,0,0" />
                            <ListBox x:Name="lstDepartmentName" Grid.Row="7" Grid.Column="1" Margin="5" 
                                     MinHeight="100" />
                        </Grid>
                    </ScrollViewer>
                </GroupBox>
            </DockPanel>

            <GroupBox Grid.Row="1" Grid.Column="1" Header="Student List" Padding="10" FontWeight="Bold">
                <DataGrid x:Name="dgStudentList" AutoGenerateColumns="False" IsReadOnly="True" 
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" />
                        <DataGridTextColumn Header="D.O.B" Binding="{Binding DOB, StringFormat='dd/MM/yyyy'}" />
                        <DataGridTextColumn Header="Major" Binding="{Binding MajorName}" Width="*" />
                        <DataGridTextColumn Header="Department" Binding="{Binding DeptName}" Width="*" />
                        <DataGridTextColumn Header="Skills" Binding="{Binding Skill}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

        </Grid>

        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="5" Margin="0,10,0,0">
            <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Padding="15,5" Click="btnClose_Click" />
        </Border>

    </Grid>
</Window>
