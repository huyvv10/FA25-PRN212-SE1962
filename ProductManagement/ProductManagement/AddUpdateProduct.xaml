<Window x:Name="frmAddUpdate" x:Class="ProductManagement.AddUpdateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManagement"
        mc:Ignorable="d"
        Title="AddUpdateProduct" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="frmAddUpdate_Loaded">
    <Grid Margin="10" Background="#eee">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="Yellow" Padding="5">
            <TextBlock Text="ADD NEW PRODUCT" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="Blue"/> 
        </Border>
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>
                <Label Content="ID" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="txtID" Grid.Row="0" Grid.Column="1" Padding="5" Margin="5"/>
                <Label Content="Name" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" Padding="5" Margin="5"/>
                <Label Content="Unit" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="txtUnit" Grid.Row="2" Grid.Column="1" Padding="5" Margin="5"/>
                <Label Content="Quantity" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="txtQty" Grid.Row="3" Grid.Column="1" Padding="5" Margin="5"/>
                <Label Content="Category" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboCategory" Grid.Row="4" Grid.Column="1" Padding="5" Margin="5"/>
            </Grid>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Save" Background="Yellow" Width="85" Margin="0,5" Click="btnSave_Click"/>
                <Button x:Name="btnClose" Content="Close" Background="Yellow" Width="85" Margin="0,5" Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
